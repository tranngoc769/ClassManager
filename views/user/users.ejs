<% extend('../partials/layout') %>
    <div class="pcoded-main-container">
        <div class="pcoded-content container">
            <!-- [ Main Content ] start -->
            <div class="row">
                <!-- [ Dashboard ] start -->
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6 d-flex align-items-center mb-4">
                            <h1 class="d-inline-block font-weight-normal mb-0">
                                <%= title %>
                            </h1>
                        </div>
                        <div class="col-sm-6 d-block d-sm-flex align-items-center justify-content-end mb-4 text-right">
                            <a type="button" href="/users/add" class="btn d-block ml-auto btn-primary"><i class="feather icon-plus mr-2"></i>Thêm mới</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="dt-responsive table-responsive">
                                        <table id="usertable" class="table table-striped nowrap">
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th></th>
                                                    <th>Trạng thái</th>
                                                    <th>Loại</th>
                                                    <th>Họ và tên</th>
                                                    <th>SĐT</th>
                                                    <th>Telegram</th>
                                                    <th>Lương dạy</th>
                                                    <th>Lương coi thi</th>
                                                    <th>Lương ca</th>
                                                    <th>Lương dịch vụ</th>
                                                    <th>Địa chỉ</th>
                                                    <th>Tên tài khoản</th>
                                                    <th>MXH</th>
                                                    <th>Ngày tạo</th>
                                                    <th>Ngày cập nhật</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for(var i = 0; i < users.length; i++) { %>
                                                    <tr>
                                                        <td>
                                                            <%=users[i].id %>
                                                        </td>
                                                        <td class="text-right">
                                                            <div class="btn-group card-option">
                                                                <a href="/users/edit/<%=users[i].id %>"><i class="feather icon-edit"></i></a>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <span g_id="<%=users[i].id %>" status="<%=users[i].is_delete %>" class="active_user badge badge-pill
                                                                    <% if(users[i].is_delete){ %>badge-danger">Vô hiệu<% }else{%>badge-success">Hoạt động <% } %> </span>
                                                        </td>
                                                        <td>
                                                            <% if(users[i].user_level){ %>
                                                                <span class="badge badge-pill badge-info">Trưởng nhóm</span>
                                                                <% }else if(users[i].user_level ==0){%>
                                                                    <span class="badge badge-pill badge-success">Giảng viên</span>
                                                                    <% }else{%>
                                                                        <span class="badge badge-pill badge-danger">Admin</span>
                                                                        <% } %>
                                                        </td>
                                                        <td>
                                                            <%=users[i].full_name %>
                                                        </td>
                                                        <td>
                                                            <%=users[i].phone %>
                                                        </td>

                                                        <td class="sorting_1">
                                                            <div class="media">
                                                                <div class="media-body ml-3 align-self-center">
                                                                    <h5 class="mb-1">
                                                                        <%=users[i].tele_user %>
                                                                    </h5>
                                                                    <p class="mb-0">
                                                                        <%=users[i].tele_id %>
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <%=formatter.format(users[i].day_salary)%> đ
                                                        </td>
                                                        <td>
                                                            <%=formatter.format(users[i].thi_salary)%> đ
                                                        </td>
                                                        <td>
                                                            <%=formatter.format(users[i].ca_salary)%> đ
                                                        </td>
                                                        <td>
                                                            <%=formatter.format(users[i].dv_salary)%> đ
                                                        </td>
                                                        <td>
                                                            <%=users[i].address %>
                                                        </td>
                                                        <td>
                                                            <%=users[i].username %>
                                                        </td>
                                                        <td>
                                                            <%=users[i].social %>
                                                        </td>
                                                        <td>
                                                            <%= moment(users[i].createdAt).format("YYYY-MM-DD HH:mm:ss") %>
                                                        </td>
                                                        <td>
                                                            <%= moment(users[i].updatedAt).format("YYYY-MM-DD HH:mm:ss") %>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- [ Dashboard ] end -->
            </div>
            <!-- datatable Js -->