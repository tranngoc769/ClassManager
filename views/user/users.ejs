<% extend('../partials/layout') %>
    <!-- data tables css -->
    <link rel="stylesheet" href="assets/css/plugins/dataTables.bootstrap4.min.css">
    <div class="pcoded-main-container">
        <div class="pcoded-content container">
            <!-- [ Main Content ] start -->
            <div class="row">
                <!-- [ Dashboard ] start -->
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6 d-flex align-items-center mb-4">
                            <h1 class="d-inline-block font-weight-normal mb-0">
                                <%= title %>
                            </h1>
                        </div>
                        <div class="col-sm-6 d-block d-sm-flex align-items-center justify-content-end mb-4 text-right">
                            <a type="button" href="/users/add" class="btn d-block ml-auto btn-primary"><i class="feather icon-plus mr-2"></i>Thêm mới</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table id="usertable" class="table table-center mb-0 ">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Loại</th>
                                                    <th>Họ và tên</th>
                                                    <th>SĐT</th>
                                                    <th>Địa chỉ</th>
                                                    <th>MXH</th>
                                                    <th>Telegram</th>
                                                    <th>Ngày tạo</th>
                                                    <th>Ngày cập nhật</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for(var i = 0; i < users.length; i++) { %>
                                                    <tr>
                                                        <td>
                                                            <%=users[i].id %>
                                                        </td>
                                                        <td>
                                                            <% if(users[i].is_lead){ %>
                                                                <span class="badge badge-pill badge-info">Trưởng nhóm</span>
                                                                <% }else{%>
                                                                    <span class="badge badge-pill badge-success">Giảng viên</span>
                                                                    <% } %>
                                                        </td>
                                                        <td>
                                                            <%=users[i].full_name %>
                                                        </td>
                                                        <td>
                                                            <%=users[i].phone %>
                                                        </td>
                                                        <td>
                                                            <%=users[i].address %>
                                                        </td>
                                                        <td>
                                                            <%=users[i].social %>
                                                        </td>
                                                        <td class="sorting_1">
                                                            <div class="media">
                                                                <div class="media-body ml-3 align-self-center">
                                                                    <h5 class="mb-1">
                                                                        <%=users[i].tele_user %>
                                                                    </h5>
                                                                    <p class="mb-0">
                                                                        <%=users[i].tele_id %>
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <%= moment(users[i].createdAt).format("YYYY-MM-DD HH:mm:ss") %>
                                                        </td>
                                                        <td>
                                                            <%= moment(users[i].updatedAt).format("YYYY-MM-DD HH:mm:ss") %>
                                                        </td>
                                                        <td class="text-right">
                                                            <div class="btn-group card-option">
                                                                <button type="button" class="btn shadow-none ">
                                                            <i class="feather icon-plus"></i>
                                                        </button>
                                                                <button type="button" class="btn shadow-none px-0 dropdown-toggle no-arrow" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <i class="feather icon-more-horizontal"></i>
                                                        </button>
                                                                <ul class="list-unstyled card-option dropdown-menu dropdown-menu-right">
                                                                    <li class="dropdown-item reload-card"><a href="/users/edit/<%=users[i].id %>"><i class="feather icon-refresh-cw"></i> Chỉnh sửa</a></li>
                                                                    <li class="dropdown-item close-card"><a href="#!"><i class="feather icon-trash"></i> remove</a></li>
                                                                </ul>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <a href="#!" class="mb-0 text-body"><i class="feather icon-plus mr-2"></i>Add Users</a>
                        </div>
                    </div>
                </div>
                <!-- [ Dashboard ] end -->
            </div>
            <!-- datatable Js -->
            <script src="assets/js/plugins/jquery.dataTables.min.js"></script>
            <script src="assets/js/plugins/dataTables.bootstrap4.min.js"></script>
            <script>
                $('#usertable').DataTable();
            </script>